<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <EditText
        android:id = "@+id/whichCartName"
        android:hint="Enter Cart name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id = "@+id/whichVendName"
        android:hint="Enter Vender name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/leftT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/APMO"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/rightT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/APMT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id = "@+id/whichFood"
        android:hint="Enter food item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/advFindEm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search" />


</LinearLayout>